<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cenco.xz.com.commonlib.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#123456"
                android:orientation="vertical">



                <Button
                    style="@style/FullViewStyle"
                    android:onClick="loginClick"
                    android:text="登录" />
                <Button
                    style="@style/FullViewStyle"
                    android:onClick="taskListClickRecieved"
                    android:text="任务列表（已接收）" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#00FF00"
                android:orientation="vertical">

                <Button
                    style="@style/FullViewStyle"
                    android:onClick="updateClick"
                    android:text="升级" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFff00"
                android:orientation="vertical">

                <Button
                    style="@style/FullViewStyle"
                    android:onClick="watermarkClick"
                    android:id="@+id/btnWaterA"
                    android:text="打水印a" />
                <Button
                    style="@style/FullViewStyle"
                    android:onClick="watermarkClick"
                    android:id="@+id/btnWaterB"
                    android:text="打水印b" />
                <Button
                    style="@style/FullViewStyle"
                    android:onClick="watermarkClick"
                    android:id="@+id/btnWaterC"
                    android:text="打水印c" />
                <Button
                    style="@style/FullViewStyle"
                    android:onClick="watermarkClick"
                    android:id="@+id/btnWaterD"
                    android:text="打水印d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/watermarkImageView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/infoImageView"
                        android:layout_width="0dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FF00ff"
                android:orientation="vertical">

                <TextView
                    style="@style/normalViewStyle"
                    android:text="网络请求\n测试结果见log打印" />

                <Button
                    style="@style/FullViewStyle"
                    android:onClick="getClick"
                    android:text="get请求" />
                <Button
                    style="@style/FullViewStyle"
                    android:onClick="getImageClick"
                    android:text="get请求图片" />

                <Button
                    style="@style/FullViewStyle"
                    android:onClick="postClick"
                    android:text="post请求" />

                <Button
                    style="@style/FullViewStyle"
                    android:onClick="postFileClick"
                    android:text="post文件上传" />

                <Button
                    style="@style/FullViewStyle"
                    android:onClick="taskListClick"
                    android:text="任务列表" />
                <Button
                    style="@style/FullViewStyle"
                    android:onClick="jsonClick"
                    android:text="json请求" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
